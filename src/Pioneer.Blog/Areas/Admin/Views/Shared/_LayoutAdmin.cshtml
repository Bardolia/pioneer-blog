@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headEnd
{
  <link href="~/app.css" rel="stylesheet" asp-append-version="true" />
  <script src="~/admin/libs/libs.js" asp-append-version="true"></script>
  <script src="~/admin/libs/core-js/shim.min.js"></script>
  <script src="~/admin/libs/zone.js/zone.js"></script>
  <script src="~/admin/libs/reflect-metadata/Reflect.js"></script>
  <script src="~/admin/libs/systemjs/system.src.js"></script>
  <script src="~/admin/systemjs.config.js"></script>
  <script>
    System.import('app').catch(function (err) { console.error(err); });
  </script>
}

@section nav
{
  <nav class="nav-main nav-admin">
    <input type="hidden" class="nav-main-show" />
    <div class="title-bar clearfix hide" data-responsive-toggle="example-menu" data-hide-for="medium">
      <div class="title-bar-title float-left">
        <a href="/" class="title">Pioneer <span>Code</span></a>
      </div>
      <button class="fa fa-bars fa-lg float-right" type="button" data-toggle></button>
    </div>
    <div class="top-bar" id="example-menu">
      <div class="row">
        <div class="large-12 columns">
          <div class="top-bar-left hide-for-small-only">
            <ul class="menu">
              <li class="menu-text">
                <a href="/" class="title">Pioneer <span>Code</span></a>
              </li>
            </ul>
          </div>
          <div class="top-bar-right">
            <ul class="menu">
              <li>
                <a href="/admin/home">
                  HOME
                </a>
              </li>
              <li>
                <a href="/admin/post">
                  POSTS
                </a>
              </li>
              <li>
                <a href="/admin/tag">
                  TAGS
                </a>
              </li>
              <li>
                <a href="/admin/category">
                  CATEGORIES
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>
}

<section class="body-content-admin">
  <my-app>Loading...</my-app>
  @RenderBody()
</section>

@section bodyEnd
{
  $(() => {
    $(document).foundation();
    $('.title-bar').removeClass('hide');
  });
}