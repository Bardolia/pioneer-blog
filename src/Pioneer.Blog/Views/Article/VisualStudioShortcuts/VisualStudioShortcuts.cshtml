@{
    Layout = "~/Views/Article/_Template.cshtml";
}
<div class="hero-gradient hg-small home-hero"
     data-parallax="scroll"
     data-image-src="/images/articles/visual-studio-shortcuts/visual-studio-shortcuts.jpg">
  <div class="hero-gradient-content">
      <h1>@ViewBag.Title</h1>
      <div class="bar"></div>
  </div>
</div>
<div class="row collapse width-100">
  <div class="medium-2 columns">
    <ul class="tabs vertical" id="vert-tabs" data-tabs>
      <li class="tabs-title is-active">
        <a href="#panel1" aria-selected="true">Editor</a>
      </li>
      <li class="tabs-title">
        <a href="#panel2">Refactoring</a>
      </li>
      <li class="tabs-title">
        <a href="#panel3">Debugging</a>
      </li>
      <li class="tabs-title">
        <a href="#panel4" aria-selected="true">Search And Navigation</a>
      </li>
    </ul>
  </div>
  <div class="medium-10 columns">
    <div class="tabs-content vertical" data-tabs-content="vert-tabs">
      <div class="vs-shortcuts-content">
        <div class="tabs-panel is-active" id="panel1">
          @Html.Partial("VisualStudioShortcuts/_Editor")
        </div>
        <div class="tabs-panel" id="panel2">
          @Html.Partial("VisualStudioShortcuts/_Refactoring")
        </div>
        <div class="tabs-panel" id="panel3">
          @Html.Partial("VisualStudioShortcuts/_Debugging")
        </div>
        <div class="tabs-panel" id="panel4">
          @Html.Partial("VisualStudioShortcuts/_SearchAndNavigation")
        </div>
      </div>
    </div>
  </div>
</div>