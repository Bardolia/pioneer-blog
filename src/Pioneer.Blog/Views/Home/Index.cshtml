@{
    Layout = "~/Views/Home/_Template.cshtml";
    ViewBag.Title = "Home";
}
<input type="hidden" value="d9197f1e-e49b-4d41-9851-440cfa63abb7">
<div class="hero-gradient hg-large home-hero" data-parallax="scroll" data-image-src="/images/hero-home.jpg">
  <div class="row hero-gradient-content">
    <div class="large-12 column">
      <h1>Pioneer Code</h1>
      <div class="bar"></div>
      <p>How-to's, life hacks and observations for the modern day software developer.</p>
      <a class="button large empty" href="/blog" title="Pioneer Blog">READ THEM ALL</a>
    </div>
  </div>
</div>
<section class="home-latest-posts">
  <div class="row width-100">
    <h3 class="header-surround-bar"><span>Latest</span></h3>
    <div class="home-latest-post">
      @foreach (var post in Model)
      {
          <div class="large-3 columns end">
            @Html.Partial("_HomePostCard", (Post)post)
          </div>
      }
    </div>
  </div>
</section>
<section class="home-greatest-posts">
  <h3 class="header-surround-bar"><span>Popular Posts</span></h3>
  <div class="row ">
    <div class="large-6 columns">
      @foreach (var post in (ViewBag.PopularPosts as ICollection<Post>).Take(2))
      {
          <a class="clearfix home-greatest-posts-card" href="/post/@post.Url" title="@post.Title">
            <div class="home-greatest-posts-card-image float-left" style="background-image: url('@post.IconImage')"></div>
            <h4>@post.Title</h4>
          </a>
      }
    </div>
    <div class="large-6 columns">
      @foreach (var post in (ViewBag.PopularPosts as ICollection<Post>).Skip(2))
      {
          <a class="clearfix home-greatest-posts-card" href="/post/@post.Url" title="@post.Title">
            <div class="home-greatest-posts-card-image float-left" style="background-image: url('@post.IconImage')"></div>
            <h4>@post.Title</h4>
          </a>
      }
      <a class="float-right" href="/blog" title="Blog Posts"><i class="fa fa-hand-o-right">&nbsp;</i>Read More This Way </a>
    </div>
  </div>
</section>
<section class="home-sign-up">
  <div class="row">
    <div class="large-10 large-push-1 columns">
      <h4><span>Get Top Notch Bits Sent Straight To Your Inbox!</span></h4>
      <p>Stay up to date on all the happenings at Pioneer Code, receive exclusive offers and be the first to hear about new content.</p>
      <div class="input-group">
        <input class="input-group-field" type="text" placeholder="Your email address...">
        <div class="input-group-button">
          <button type="submit" class="button">
            <i class="fa fa-envelope-o"></i>&nbsp;SEND
          </button>
        </div>
      </div>
    </div>
  </div>
</section>